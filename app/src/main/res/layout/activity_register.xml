<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/plumber1" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_420sdp"
            android:layout_marginTop="@dimen/_180sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_marginBottom="@dimen/_minus20sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_margin="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_owner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorWhite"
                            android:text="Home Owner"
                            android:background="@color/colorAccent"
                            android:fontFamily="@font/fonts_semibold"
                            android:drawableLeft="@drawable/checked"
                            android:padding="@dimen/_8sdp"
                            android:drawablePadding="@dimen/_3sdp"/>
                        <TextView
                            android:id="@+id/landlord"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorBlack"
                            android:text="Land Lord"
                            android:gravity="center"
                            android:fontFamily="@font/fonts_semibold"
                            android:drawableLeft="@drawable/unchecked"
                            android:padding="@dimen/_8sdp"
                            android:drawablePadding="@dimen/_3sdp"/>
                        <TextView
                            android:id="@+id/agent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorBlack"
                            android:text="Agents"
                            android:gravity="center"
                            android:fontFamily="@font/fonts_semibold"
                            android:drawableLeft="@drawable/unchecked"
                            android:padding="@dimen/_8sdp"
                            android:drawablePadding="@dimen/_3sdp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Register"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/fonts_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plumber Service"
                        android:fontFamily="@font/fonts_bold"
                        android:textSize="22sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_20sdp">
                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Full Name"
                        android:textColor="#000"
                        android:padding="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        android:textStyle="normal"
                        android:drawableRight="@drawable/person"/>
                    />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_20sdp">
                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Email ID"
                        android:textColor="#000"
                        android:padding="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        android:textStyle="normal"
                        android:drawableRight="@drawable/email"/>
                    />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_20sdp">
                    <EditText
                        android:id="@+id/edt_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Password"
                        android:textColor="#000"
                        android:padding="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        android:textStyle="normal"
                        android:drawableRight="@drawable/pass"/>
                    />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="@color/colorPrimary">
                    <TextView
                        android:id="@+id/btnlogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Register"
                        android:textColor="@color/colorWhite"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/fonts_bold"
                        android:textSize="22sp"/>
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/dotted_line"/>
                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:lineSpacingExtra="4sp"
                    android:text="Already have an account ? Login Here"
                    android:textColor="@color/colorDarkGrey"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>




</ScrollView>