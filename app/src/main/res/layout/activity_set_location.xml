<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:src="@drawable/map"
        android:layout_marginTop="@dimen/_100sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Hello, nice to meet you!"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/_11sdp"
        android:fontFamily="@font/fonts_semibold"
        android:textColor="@color/colorDarkGrey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See Plumbers around"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/fonts_bold"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:src="@drawable/city_image"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/btn_current_locaton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/box"
        android:backgroundTint="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Current Location"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:gravity="center"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableStart="@drawable/my_location"
            android:fontFamily="@font/fonts_semibold"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/btn_manual_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/box">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Some other Location"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center"
            android:drawableStart="@drawable/search"
            android:drawableTint="@color/colorBlack"
            android:fontFamily="@font/fonts_semibold"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>


</LinearLayout>