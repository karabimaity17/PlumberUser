<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@color/colorWhite">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_510sdp"
        />
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_375sdp"
        app:dotsColor="@color/colorGrey"
        app:dotsCornerRadius="@dimen/_4sdp"
        app:dotsSize="@dimen/_8sdp"
        app:dotsSpacing="@dimen/_3sdp"
        app:dotsWidthFactor="6"
        app:selectedDotColor="@color/colorPrimary"

        />
    <androidx.cardview.widget.CardView
        android:id="@+id/btnnext"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_55sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_minus10sdp"
        app:cardBackgroundColor="@color/colorAccent">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Continue"
            android:drawableRight="@drawable/right_arrow2"
            android:textColor="@color/colorWhite"
            android:drawablePadding="@dimen/_5sdp"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/fonts_bold"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>