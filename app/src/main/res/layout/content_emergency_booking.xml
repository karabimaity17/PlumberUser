<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/nested">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="vertical"
            android:id="@+id/lin"
            android:layout_marginTop="@dimen/_15sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency\nBooking"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/fonts_bold"
                android:textStyle="bold"
                android:lineSpacingExtra="@dimen/_5sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Image Of Your Problem :"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/fonts_regular"
                android:lineSpacingExtra="@dimen/_5sdp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/rectangle_sape"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/image"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardBackgroundColor="@color/colorGreen"
                android:id="@+id/card_image">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorWhite"
                    android:text="Choose your image"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/fonts_medium"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Video Of Your Problem :"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/fonts_regular"
                android:lineSpacingExtra="@dimen/_5sdp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/rectangle_sape"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardBackgroundColor="@color/colorGreen"
                android:id="@+id/card_video">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorWhite"
                    android:text="Choose your video"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/fonts_medium"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Max Length 15 sec"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/fonts_regular"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="What's Your Problem?:"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/fonts_regular"
                android:lineSpacingExtra="@dimen/_5sdp"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_below="@+id/lin"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="About Your Problem...."
                android:textColorHint="@color/colorGrey"
                android:textSize="13sp"
                android:fontFamily="@font/fonts_light"
                android:textStyle="bold"
                android:background="@null"
                android:textColor="@color/colorBlack"
                android:padding="@dimen/_5sdp"
                android:gravity="start"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_42sdp"
            android:layout_margin="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_25sdp"
            android:id="@+id/btnBook"
            android:layout_gravity="right"

            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_below="@+id/nested"
            app:cardBackgroundColor="@color/colorPrimary">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:drawableRight="@drawable/arrow_forward"
                android:layout_marginHorizontal="@dimen/_35sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/fonts_bold"
                android:textSize="@dimen/_15sdp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

</RelativeLayout>