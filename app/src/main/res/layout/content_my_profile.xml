<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#F8CFD7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            app:cardCornerRadius="@dimen/_17sdp"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/back_btn">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_back"
                android:layout_margin="@dimen/_8sdp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="My Profile"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:fontFamily="@font/fonts_medium"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"/>
    </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_120sdp"
                android:layout_marginBottom="@dimen/_minus50sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_50sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_10sdp"
                        android:padding="@dimen/_6sdp"
                        android:background="@drawable/box_grey"
                        android:backgroundTint="#EDEDED"
                        android:elevation="@dimen/_5sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_46sdp"
                            android:layout_height="@dimen/_46sdp"
                            app:cardCornerRadius="@dimen/_23sdp"
                            app:cardBackgroundColor="#fff"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_margin="@dimen/_2sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/name2"
                                android:scaleType="centerInside"
                                android:layout_margin="@dimen/_10sdp"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email Id"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/fonts_regular"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/user_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="jason@gmail.com"
                                android:background="@null"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/fonts_regular"
                                android:paddingVertical="@dimen/_5sdp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:padding="@dimen/_6sdp"
                        android:background="@drawable/box_grey"
                        android:backgroundTint="#EDEDED"
                        android:elevation="@dimen/_5sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_46sdp"
                            android:layout_height="@dimen/_46sdp"
                            app:cardCornerRadius="@dimen/_23sdp"
                            app:cardBackgroundColor="#fff"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_margin="@dimen/_2sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/smartphone"
                                android:scaleType="centerInside"
                                android:layout_margin="@dimen/_10sdp"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phone Number"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/fonts_regular"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/user_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="9876543210"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:background="@null"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/fonts_regular"
                                android:paddingVertical="@dimen/_5sdp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:background="#d8fcf7"
                        android:layout_marginTop="@dimen/_200sdp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>





            <RelativeLayout
                android:id="@+id/img_rel"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_80sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:cardCornerRadius="@dimen/_35sdp"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardBackgroundColor="@color/colorWhite">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        app:cardCornerRadius="@dimen/_30sdp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/profile_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/user"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_img_edit"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_10sdp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/edit_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_margin="@dimen/_2sdp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/edit"
                        />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center_horizontal"
                android:layout_below="@id/img_rel"
                android:text="Jason"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/fonts_bold"
                android:textStyle="bold" />


        </RelativeLayout>
</RelativeLayout>
