<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/box"
        android:layout_margin="@dimen/_8sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:text="Rate &amp; Review"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:fontFamily="@font/fonts_semibold"
            android:background="@drawable/box"
            android:layout_margin="@dimen/_3sdp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorGrey"
            android:layout_gravity="center"
            app:cardElevation="@dimen/_5sdp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/plum_img1"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:text="John Anderson"
            android:textStyle="bold"
            android:fontFamily="@font/fonts_medium"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorBlack"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Rate our Plumber"
            android:visibility="visible"
            android:fontFamily="@font/fonts_regular"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorDarkGrey"/>

       <RatingBar
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:numStars="5"
           android:progressTint="@color/colorAccent"
           android:layout_gravity="center"
           android:backgroundTint="@color/colorDarkGrey"
           android:scaleX=".5"
           android:scaleY=".5"

           android:isIndicator="true"
           android:progressBackgroundTint="@color/colorGrey"/>

        <EditText
            android:id="@+id/edt_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:hint="Additional comments..."
            android:background="@drawable/box"
            android:lines="4"
            android:gravity="start"
            android:fontFamily="@font/fonts_regular"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorDarkGrey"
            android:visibility="visible"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_8sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/_5sdp">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_34sdp"
                app:cardCornerRadius="@dimen/_17sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="right"
                app:cardBackgroundColor="@color/colorGrey">
                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_35sdp"

                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="@dimen/_12sdp"
                    android:text="Cancel"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_17sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/add"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_35sdp"

                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/btn_background"
                    android:text="Submit Review"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>