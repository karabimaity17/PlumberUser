<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/_50sdp"
    android:maxHeight="@dimen/_300sdp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:id="@+id/other_bottomsheet"
    app:cardCornerRadius="@dimen/_30sdp"
    app:cardElevation="0dp"
   android:layout_marginBottom="@dimen/_minus60sdp">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">
            <View
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_4sdp"
                android:background="@drawable/box_grey"
                android:layout_gravity="center"/>




            <TextView
                android:id="@+id/nameToolbar2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="start"
                android:text="Other"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/fonts_regular"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/booking_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="Booking History "
                android:textColor="@color/colorBlack"
                android:padding="@dimen/_10sdp"
                android:gravity="start"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/fonts_regular"
                android:drawableLeft="@drawable/booking"
                android:drawableTint="@color/colorPrimary"
                android:backgroundTint="#EDEDED"/>

            <Button
                android:id="@+id/schedule_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Schedule Booking"
                android:textColor="@color/colorBlack"
                android:padding="@dimen/_10sdp"
                android:gravity="start"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/fonts_regular"
                android:drawableLeft="@drawable/schedule"
                android:drawableTint="@color/colorAccent"
                android:backgroundTint="#EDEDED"/>

            <TextView
                android:id="@+id/sign_up"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/colorAccent"
                android:layout_gravity="center"
                android:elevation="@dimen/_5sdp"
                android:clickable="true"
                android:text="Sigh Out"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:layout_margin="@dimen/_15sdp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.cardview.widget.CardView>
