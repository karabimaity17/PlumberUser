<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_10sdp"
    android:id="@+id/card_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            app:cardCornerRadius="@dimen/_10sdp">
            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:visibility="visible"
                android:background="@drawable/gradiant1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/service_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plumbing"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/fonts_semibold"/>
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/right_arrow2"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_2sdp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/half_circle"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_minus12sdp"/>
                <ImageView
                    android:id="@+id/service_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/plumber"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/colorWhite">
            <Button
                android:id="@+id/txt_emergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Emergency \nBooking"
                android:background="@drawable/box"
                android:backgroundTint="@color/colorAccent"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:fontFamily="@font/fonts_semibold"
                android:padding="@dimen/_8sdp"
                android:gravity="center"
                android:lines="2"
                android:layout_margin="@dimen/_8sdp"
                />
            <Button
                android:id="@+id/txt_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:textColor="@color/colorDarkGrey"
                android:text="Schedule\nBooking"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:gravity="center"
                android:fontFamily="@font/fonts_semibold"
                android:padding="@dimen/_8sdp"

                android:lines="2"
                android:layout_margin="@dimen/_8sdp"/>
        </LinearLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>