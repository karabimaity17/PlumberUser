<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lin"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plumber Service"
        android:fontFamily="@font/fonts_bold"
        android:textSize="@dimen/_17sdp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_50sdp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find"
            android:fontFamily="@font/fonts_medium"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorDarkGrey"
            android:gravity="center"
            />
        <View
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/bullet"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check"
            android:fontFamily="@font/fonts_medium"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorDarkGrey"
            android:gravity="center"
            />
        <View
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/bullet"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book"
            android:fontFamily="@font/fonts_medium"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorDarkGrey"
            android:gravity="center"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageviewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/img3" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/bold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4sp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="Plumber at your chosen location"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/fonts_medium"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:lineSpacingExtra="6sp"
        android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document"
        android:textColor="@color/colorBlack"
        android:textStyle="normal"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_10sdp"
        />

</LinearLayout>
